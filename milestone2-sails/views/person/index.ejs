<div class="row">
    <% persons.forEach( function(model) { %>
    <div class="card mb-3 col-12 col-md-6">
        <h4 class="card-header"><a href="/person/view/<%= model.id %>"><%= model.title %></a></h4>
        <div class="row no-gutters">
            <div class="col-md-4">
                <img src="<%= model.image %>" class="card-img card-body" alt="<%= model.title %>">
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <ul class="list-group">
                        <li class="list-group-item">Estate: <%= model.estate %></li>
                        <li class="list-group-item">Gross Area: <%= model.grossarea %></li>
                        <li class="list-group-item">Rent: HK$ <%= model.rent %> per month</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <% }); %>
</div>